<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.totalmaster.csa">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoTitleBar" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register"
            android:parentActivityName=".DashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WorkingDetailsActivity"
            android:label="@string/currentCondition"
            android:parentActivityName=".DashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FamilyActivity"
            android:label="@string/family"
            android:parentActivityName=".DashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WorkingConditionActivity"
            android:label="@string/desiredCondition"
            android:parentActivityName=".DashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EducationBackgroundActivity"
            android:label="@string/educationBackground"
            android:parentActivityName=".DashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoTitleBar" />
        <activity
            android:name=".EvaluationActivity"
            android:label="@string/evaluation"
            android:parentActivityName=".DashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CommentActivity"
            android:label="@string/comment"
            android:parentActivityName=".EvaluationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CoWorkerActivity"
            android:label="@string/coWorker"
            android:parentActivityName=".DashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EvaluateCoWorkerActivity"
            android:label="@string/evaluateCoWorker"
            android:parentActivityName=".CoWorkerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RateReliabilityActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".CreateAccountActivity"
            android:label="@string/createAccount"
            android:screenOrientation="portrait" />
        <activity android:name=".ReliablilityRateActivity" />
        <activity android:name=".HardWorkingActivity" />
        <activity android:name=".TechnicalLevelActivity" />
        <activity android:name=".LeadershipActivity"></activity>
    </application>

</manifest>