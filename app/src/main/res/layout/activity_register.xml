<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grayLighten"
    tools:context="com.totalmaster.csa.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp">
            <TextView
                android:id="@+id/idCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ប្រទេស | Country"
                android:textSize="@dimen/textSize" />
            <EditText
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="30"
                android:hint="ប្រទេស"
                android:text="Cambodia"
                android:textSize="@dimen/textSize_placeholder"
                android:layout_marginTop="7dp"
                android:padding="@dimen/padding_editText"
                android:layout_below="@+id/idCountry"
                android:background="@drawable/border_shape"/>
            <TextView
                android:id="@+id/validate_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/textSize_validate"
                android:textStyle="italic"
                android:textColor="@color/validate"
                android:layout_below="@id/country"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/idName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="​គោត្តនាម +​ នាម | Full name"
                android:textSize="@dimen/textSize" />
            <EditText
                android:id="@+id/fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="30"
                android:layout_marginTop="7dp"
                android:hint="ឈ្មោះ"
                android:textSize="@dimen/textSize_placeholder"
                android:padding="@dimen/padding_editText"
                android:background="@drawable/border_shape"
                android:layout_below="@+id/idName"/>
            <TextView
                android:id="@+id/validate_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/textSize_validate"
                android:textStyle="italic"
                android:textColor="@color/validate"
                android:layout_below="@id/fullName"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/idAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:textColor="@color/gray"
                android:text="អាយុ | Age"
                android:textSize="@dimen/textSize"/>

            <org.angmarch.views.NiceSpinner
                android:id="@+id/age"
                android:background="@drawable/mybutton"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idAge"/>
            <TextView
                android:id="@+id/validate_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/textSize_validate"
                android:textStyle="italic"
                android:textColor="@color/validate"
                android:layout_below="@id/age"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/idDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:text="ថ្ងៃ ខែ ឆ្នាំ កំណើត | Date of birth"
                android:textSize="@dimen/textSize"
                android:textColor="@color/gray" />
            <LinearLayout
                android:id="@+id/date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"/>
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"/>
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/validate_DOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/textSize_validate"
                android:textStyle="italic"
                android:textColor="@color/validate"
                android:layout_below="@id/date_of_birth"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/idAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:text="អាសយដ្ឋាន | Address"
                android:textSize="@dimen/textSize"/>
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="60"
                android:hint="អាសយដ្ឋាន"
                android:padding="@dimen/padding_editText"
                android:textSize="@dimen/textSize_placeholder"
                android:background="@drawable/border_shape"
                android:layout_below="@+id/idAddress"/>
            <TextView
                android:id="@+id/validate_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/textSize_validate"
                android:textStyle="italic"
                android:textColor="@color/validate"
                android:layout_below="@id/address"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/idPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="លេខទូរស័ព្ទ | Phone number"
                android:textSize="@dimen/textSize"/>
            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="14"
                android:hint="លេខទូរស័ព្ទ"
                android:textSize="@dimen/textSize_placeholder"
                android:padding="@dimen/padding_editText"
                android:layout_marginTop="7dp"
                android:background="@drawable/border_shape"
                android:layout_below="@+id/idPhoneNumber"/>
            <TextView
                android:id="@+id/validate_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/textSize_validate"
                android:textStyle="italic"
                android:textColor="@color/validate"
                android:layout_below="@id/phoneNumber"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/idEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="សារអេឡិចត្រូនិច | E-mail"
                android:textSize="@dimen/textSize"/>
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="សារអេឡិចត្រូនិច"
                android:textSize="@dimen/textSize_placeholder"
                android:padding="@dimen/padding_editText"
                android:layout_marginTop="7dp"
                android:background="@drawable/border_shape"
                android:layout_below="@+id/idEmail"/>
            <TextView
                android:id="@+id/validate_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/textSize_validate"
                android:textStyle="italic"
                android:textColor="@color/validate"
                android:layout_below="@id/email"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/recommendationTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="អ្នកដែលណែនាំកម្មវិធីនេះដល់អ្នក | Who recommended this app to you"
                android:textSize="@dimen/textSize"/>
            <EditText
                android:id="@+id/recommendation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="អ្នកដែលណែនាំកម្មវិធីនេះដល់អ្នក"
                android:textSize="@dimen/textSize_placeholder"
                android:padding="@dimen/padding_editText"
                android:layout_marginTop="7dp"
                android:background="@drawable/border_shape"
                android:layout_below="@+id/recommendationTextview"/>
            <TextView
                android:id="@+id/validate_recommendation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                android:textSize="@dimen/textSize_validate"
                android:textStyle="italic"
                android:textColor="@color/validate"
                android:layout_below="@id/recommendation"/>
        </RelativeLayout>
        <Button
            android:id="@+id/bntSummitRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/white"
            android:text="@string/done"
            android:textSize="@dimen/textSize_button"
            android:background="@drawable/mysubmitbutton" />

    </LinearLayout>




</ScrollView>
